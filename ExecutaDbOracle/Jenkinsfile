pipeline {
	agent any
	
	environment {
		DB_CONN_STRING = credentials('db_conn_string')
		DB_USER = credentials('db_user')
		DB_PASS = credentials('db_pass')
	}

	tools {nodejs "nodejs"}

	stages {

		stage("Dependencias") {
			steps {
				sh '''
					cd ExecutaDbOracle
					npm install
				'''
			}			
		}
		
		stage("Gera Massa") {
			steps {
				withCredentials(
					[
						string(credentialsId: 'DB_CONN_STRING', variable: $DB_CONN_STRING) , 
						string(credentialsId: 'DB_USER', variable: $DB_USER) , 
						string(credentialsId: 'DB_PASS', variable: $DB_PASS)
					]) {
					
					sh '''
						cd ExecutaDbOracle
						node GeraMassaTesteDistribuicao.js DB_CONN_STRING DB_USER DB_PASS
					'''
				}
			}
		}
		
		stage("Cadastra distribuidores") {
			steps {
				sh '''
					cd ExecutaDbOracle
					node CadastraDistribuidores.js DB_CONN_STRING DB_USER DB_PASS
				'''
			}
		}
	}
}
